package bst;

import java.util.Scanner;

public class BSTTestClient {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		BST bst = new BST<Key>();
		
		Scanner sc=new Scanner(System.in);
		//Used to form Key class
		Key key;
		long number;
		
		//Used in Value class
		Value v;
		String username;
		System.out.println("Enter a integer and a username:");
		while(sc.hasNextLine()){
			System.out.println("Enter a integer and a username:");
			//take line split it into tokens
			String[] tokens = sc.nextLine().split(" ");
			
			//Form Key object
			key = Long.parseLong(tokens[0]);
			k=new Key(key);
			
			//Form Value object
			username=tokens[1];
			v = new Value(username);
			
			//Pass both to BST
			bst.put(k, v);
			bst.get(k);
		}
	}

}
